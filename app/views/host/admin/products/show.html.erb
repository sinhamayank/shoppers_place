<%= link_to "Edit", edit_host_admin_product_path( @product.id ) %>
<br/><br/>
Name: <%= @product.name %>
<br/>
Expire Date: <%= @product.expire_date %>
<br/>
SKU_ID: <%= @product.sku_id %>
<br/>
Price: <%= @product.price %>
<br/>
Tags:
<% @tags.each do |tag| %>
	<%= tag %>&nbsp;
<% end %>
<br/>
Categories:
<% @categories.each do |category| %>
	<%= category %>&nbsp;
<% end %>
<br/><br/>
Images:<br/>
<% @product.images.each do |image| %>
	<%= link_to( image.url, image.url, :target => "_blank" ) %><br/>
<% end %>
